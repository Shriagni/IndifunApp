<RelativeLayout
    android:id="@+id/rc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/myimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:contentDescription="@null"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/mytxt"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignStart="@+id/myimg"
        android:layout_alignEnd="@id/myimg"
        android:layout_alignBottom="@id/myimg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="14dp"
        android:text="indifun"
        android:textColor="@color/white" />


    <LinearLayout
        android:id="@+id/rl3"
        android:layout_width="55dp"
        android:orientation="horizontal"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/hot_drawable">

        <ImageView
            android:layout_height="20dp"
            android:layout_width="30dp"
            android:id="@+id/img1"
            android:contentDescription="@null"
            android:src="@drawable/ic_flame__1_"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Hot"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl4"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:weightSum="2"
        android:background="@drawable/view_drawable"
        android:orientation="horizontal"
        android:padding="@dimen/_10dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_view" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>

