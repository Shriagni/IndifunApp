<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:padding="@dimen/_100dp"
            android:background="@color/transparent">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            android:background="@drawable/bg_bottom_sheet"
            >

            <TextView
                android:id="@+id/ctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_50dp"
                android:layout_marginBottom="10dp"
                android:text="Indifun user name" />

            <com.deificindia.indifun1.ui.TagView
                android:id="@+id/tgview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ctxt"
                android:layout_centerHorizontal="true"/>
             <LinearLayout
                 android:id="@+id/ln1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_below="@id/tgview"
                 android:gravity="center_vertical"
                 android:layout_centerHorizontal="true">

                 <TextView
                     android:id="@+id/itxt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ID: 88453221 "
                     android:layout_centerHorizontal="true"
                     android:layout_below="@+id/tgview"
                     android:textColor="@color/white"
                     />
                 <View
                     android:layout_width="1dp"
                     android:layout_height="12dp"
                     android:background="@color/white"
                     android:layout_marginStart="8dp"
                     android:layout_marginEnd="8dp"

                     />
                 <LinearLayout
                     android:id="@+id/ln2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="@dimen/_10dp"
                     android:orientation="horizontal">
                     <TextView
                         android:id="@+id/itxt1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Sent:"
                         android:layout_centerHorizontal="true"
                         android:layout_below="@+id/tgview"
                         android:textColor="@color/white"
                         />
                     <ImageView
                         android:layout_height="12dp"
                         android:layout_width="12dp"
                         android:layout_marginStart="7dp"
                         android:layout_gravity="center_vertical"
                         android:src="@color/golden"/>
                 </LinearLayout>

             </LinearLayout>
            <TextView
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="status message"
                android:layout_below="@+id/ln1"
                android:gravity="center"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/act">

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/greenbg"
                    android:padding="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/stars"/>

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="User Lv."
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/img1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:text="9"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_below="@id/txt1"
                        android:layout_marginStart="60dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_10dp"
                    android:background="@drawable/redbg"
                    android:layout_marginTop="@dimen/_50dp"
                    android:layout_marginStart="9dp"
                    >
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/stars"
                        />
                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="170dp"
                        android:layout_height="35dp"
                        android:text="Broadcaster Lv"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/img2"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:text="7"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_below="@id/txt3"
                        android:layout_marginStart="60dp"
                        />
                </RelativeLayout>
            </LinearLayout>


            <View
                android:id="@+id/v2"
                style="@style/divider2"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/ll1"/>

            <LinearLayout
                android:id="@+id/ln5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp"
                android:layout_below="@id/v2"
                >
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_at" />
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_chatting" />
                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_user"
                    />
            <!--    <ImageView
                    android:id="@+id/img8"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_plus"
                    /> -->
                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_follow"
                    />

            </LinearLayout>

            <!--end-->

        </RelativeLayout>
    </LinearLayout>


<RelativeLayout
    android:id="@+id/profileImageBatch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_anchor="@id/rl1"
    app:layout_anchorGravity="bottom|center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cimage"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:src="@drawable/img_user_default"
         />

</RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>